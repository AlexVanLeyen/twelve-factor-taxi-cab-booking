{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./build",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "#*": ["source/*"]
        },
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        "__tests__"
    ]
}